<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:contentPadding="25dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2.5dp">


        <ImageView
            android:id="@+id/rowImageRowCard"
            android:layout_width="50dp"
            android:scaleType="centerCrop"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/itemDescriptionRowCard"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/itemTitleRowCard"
            android:layout_toEndOf="@+id/rowImageRowCard"
            android:paddingLeft="25dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/itemTitleRowCard"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/rowImageRowCard"
            android:paddingLeft="25dp"
            android:textSize="18dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

